{
  "info": {
    "name": "Task Management System API",
    "description": "API collection for TaskFlow's Task Management System MVP.\n\nInstructions:\n- Set the `baseUrl` variable to your backend URL (e.g., http://localhost:5168).\n- Use the requests to test all CRUD operations for tasks.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5168" },
    { "key": "taskId", "value": "1" }
  ],
  "item": [
    {
      "name": "List All Tasks",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tasks?page=1&pageSize=10&status=To%20Do",
          "query": [
            { "key": "page", "value": "1" },
            { "key": "pageSize", "value": "10" },
            { "key": "status", "value": "To Do" }
          ]
        },
        "description": "Returns a paginated list of tasks. Query params: page, pageSize, status."
      }
    },
    {
      "name": "Get Task by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tasks/{{taskId}}"
        },
        "description": "Returns a single task by its ID. Path param: taskId."
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"New Task\",\n  \"description\": \"Task description\",\n  \"status\": \"To Do\",\n  \"dueDate\": \"2024-12-31T23:59:59Z\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/tasks"
        },
        "description": "Creates a new task."
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Task\",\n  \"description\": \"Updated description\",\n  \"status\": \"In Progress\",\n  \"dueDate\": \"2024-12-31T23:59:59Z\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/tasks/{{taskId}}"
        },
        "description": "Updates an existing task. Path param: taskId."
      }
    },
    {
      "name": "Delete Task",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tasks/{{taskId}}"
        },
        "description": "Deletes a task by its ID. Path param: taskId."
      }
    }
  ]
}